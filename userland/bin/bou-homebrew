#!/bin/bash

set -e

if [ ! -d "/home/linuxbrew/.linuxbrew" ] ; then
  echo "üü¢ ${green}Configuring Homebrew..."
  echo "‚ö†Ô∏è  ${yellow}Requires sudo${reset}"
  sudo mkdir -p /home/linuxbrew
  sudo cp -r $HOME/.linuxbrew /home/linuxbrew/.linuxbrew
  sudo chown -R $USER:$USER /home/linuxbrew/.linuxbrew
else
  echo "‚ö†Ô∏è  ${yellow}Homebrew setup already exists. Ask your system administrator to grant you access${reset}"
fi

rm -rf $HOME/.linuxbrew
