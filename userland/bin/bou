#!/bin/bash

set -e

BOUPATH=/usr/share/bou

red=`tput setaf 1`
green=`tput setaf 2`
yellow=`tput setaf 3`
reset=`tput sgr0`

echo "游릭 ${green}Setting up GNOME..."
gnome-extensions enable user-theme@gnome-shell-extensions.gcampax.github.com
gnome-extensions enable hidetopbar@mathieu.bidon.ca
gsettings set com.ubuntu.update-notifier show-livepatch-status-icon false
gsettings set org.gnome.desktop.interface gtk-theme "Ant"
gsettings set org.gnome.desktop.wm.preferences theme "Ant"
gsettings set org.gnome.desktop.interface icon-theme "Numix-Circle"
gsettings set org.gnome.shell.extensions.user-theme name "Ant"
gsettings --schemadir /usr/share/gnome-shell/extensions/hidetopbar@mathieu.bidon.ca/schemas set org.gnome.shell.extensions.hidetopbar enable-intellihide "false"

echo "游릭 ${green}Setting up Terminator..."
echo "丘멆잺  ${yellow}Requires sudo${reset}"
mkdir -p $HOME/.config/terminator
sudo cp $BOUPATH/userland/files/config/terminator $HOME/.config/terminator/config

if [ ! -d "/home/linuxbrew" ] ; then
  echo "游릭 ${green}Installing Homebrew...${reset}"
  echo "丘멆잺  ${yellow}Requires sudo${reset}"
  sudo cp -r /usr/share/linuxbrew /home/
  sudo chown -R $USER:$USER /home/linuxbrew
  mv /home/linuxbrew/Homebrew $HOME/.cache/
fi

echo "游릭 ${green}Installing oh-my-zsh..."
echo "丘멆잺  ${yellow}Requires sudo${reset}"
sudo cp $BOUPATH/userland/files/config/zsh $HOME/.zshrc
sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" "" --skip-chsh --unattended
chsh -s $(which zsh)
source $HOME/.zshrc

echo "游릭 ${green}Done! Please close this window now."
